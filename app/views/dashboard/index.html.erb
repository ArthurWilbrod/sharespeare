        <center><h3><b>Demandes de prêts</b></h3></center>
        <ul class="list-group list-group-flush gugu">
          <% @ask_book_tab.each {|n| %>
          <li class="list-group-item"><b><%= BookCopy.find(n.book_copy_id).title %></b> <br> <%="Demandé par: #{User.find(n.user_id).first_name}"%> | Jusqu'au : <%="#{n.end_date.strftime('%d %b %Y')}"%>
