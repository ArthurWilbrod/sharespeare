            <%= link_to "Accepter", bookcopy_borrow_path(n.book_copy_id,n.id, :bouton_value => 1), method:"patch", class: "btn btn-success btn-round"%>
            <%= link_to "Refuser", bookcopy_borrow_path(n.book_copy_id,n.id, :bouton_value => 0), method:"patch",class: "btn btn-danger btn-round"%>
            <%= link_to "Detail", bookcopy_borrow_path(n.book_copy_id,n.id),class: "btn btn-primary btn-round" %>
          </li>
          <% } %>
        </ul>
      </div>



    </div>
  </div>
  <div class="row">

  <div class="card col" style="width: 33rem;">
    <div class="card-body">
      <center><h3><b>Mes emprunts</b></h3></center>
    </div>
    <ul class="list-group list-group-flush gugu">
