	<h2>Sign up</h2>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= render "devise/shared/error_messages", resource: resource %>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'sign_up_form'%>
	  </div>
	  	<div class="field">
	  		<%= f.label :phone %>
	  		<%= f.phone_field :phone, autocomplete: "NulmÃ©ro de tel", class: 'form-control', id: 'sign_up_form'%>
		</div>
		<div class="field">
			<%= f.label :city %>
			<%= f.phone_field :city, autocomplete: "Ta ville", class: 'form-control', id: 'sign_up_form'%>
		</div>
		<div class="field">
			<%= f.label :zip_code %>
			<%= f.phone_field :zip_code, autocomplete: "Ton code postal", class: 'form-control', id: 'sign_up_form'%>
		</div>
		<div class="field">
			<%= f.label :street %>
			<%= f.phone_field :street, autocomplete: "Ta rue", class: 'form-control', id: 'sign_up_form'%>
		</div>
		<div class="field">
			<%= f.label :street_nb %>
			<%= f.phone_field :street_nb, autocomplete: "NulmÃ©ro de rue", class: 'form-control', id: 'sign_up_form'%>
		</div>
	  <div class="field">
	    <%= f.label :password %>
	    <% if @minimum_password_length %>
	    <em>(<%= @minimum_password_length %> characters minimum)</em>
	    <% end %><br />
	    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: 'sign_up_form'%>
	  </div>
	  <div class="field">
	    <%= f.label :password_confirmation %><br />
	    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: 'sign_up_form' %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Go !", class:"btn btn-primary btn-round"  %>
	  </div>
	<% end %>
	<%= render "users/shared/links" %>
</center>





