<div class="container">
  <div class="card card-pricing">
    <div class="card-body">
      <h6 class="category">Mes informations</h6>
      <div class="icon icon-primary">
          <i class="now-ui-icons users_circle-08"></i>
      </div>
      <h3 class="card-title"><%= User.find(current_user.id).first_name %> <%= User.find(current_user.id).last_name %></h3>
        <%= form_for(@user, url: user_path(@user.id), html: {method: "patch"}) do |f| %>
        
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label 'Email' %><br>
            <%= f.email_field :email, class: "form-control", readonly: true%>
          </div>
          <div class="form-group col-md-6">
            <%= f.label 'Password' %><br>
            <%= f.password_field :password, class: "form-control"%>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label 'Prenom' %><br>
            <%= f.text_field :first_name, class: "form-control"%>
          </div>
          <div class="form-group col-md-6">
            <%= f.label 'Nom' %><br>
            <%= f.text_field :last_name, class: "form-control"%>
          </div>
        </div>

        <div class="form-group">
          <%= f.label 'Description' %><br>
          <%= f.text_area :description, class: "form-control"%>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label 'City' %>
            <%= f.select :city, options_for_select(
              [
                ['Lyon'],

              ]),{}, { class: "form form-group form-control"} %>
          </div>
          <div class="form-group col-md-2">
              <%= f.label :Votre_Arrondissement %><br />
              <%= f.select :zip_code, ["69001", "69002", "69003","69004","69005","69006","69007","69008","69009"] , autofocus: true, autocomplete: "quartier", class: 'form-control', id: 'sign_up_form'%>
          </div>
          <div class="form-group col-md-2">
            <%= f.label 'Telephone' %><br>
            <%= f.telephone_field :phone, class: "form-control"%>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label 'Adresse' %><br>
            <%= f.text_field :street, class: "form-control"%>
          </div>
          <div class="form-group col-md-2">
            <%= f.label 'Numero de rue' %><br>
            <%= f.text_field :street_nb, class: "form-control"%>
          </div>
        </div>
        <%= link_to "Modifier mon mot de passe", edit_user_registration_path, class:"btn btn-primary btn-round"%>
        <%= f.submit "Modifier les informations" , class: "btn btn-primary btn-round"%>
        <% end %>
        <p></p>
        <h3>Votre avatar</h3>
        <%if @user.avatar.attached?%>
          <div class="card card-img-top" style="width: 20rem;">
          <div class="card-avatar">

            <%= image_tag @user.avatar, alt: 'avatar' %>

          </div>
          </div>
        <%else%>
          <p>=== Vous n'avez pas d'avatar ===</p>
        <%end%>

        <%= form_tag user_avatars_path(@user), multipart: true do %>
          <%= file_field_tag :avatar %>
          <%= submit_tag "mettre Ã  jour", class: "btn btn-primary btn-round" %>
        <% end %>


    </div>
  </div>


</div>
</div>
