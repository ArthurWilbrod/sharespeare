    <div class="card-body">
      <center><h3><b>Mes livres prêtés</b></h3></center>

      <ul class="list-group list-group-flush gugu">
        <% @book_copy_not_available_tab.each {|n| %>
        <li class="list-group-item"><b><%="#{n.title}"%></b> <br /> <%=" #{n.author}"%>
        <br>
        <%= link_to "Livre recupere", bookcopy_borrow_path(n.id, Borrow.where(["book_copy_id = ? and borrow_status = ?",n.id, 2]).last.id,:bouton_value => 2), method:"patch", class: "btn btn-success btn-round btn-small"%>
