
<div class="header-2">

  <div class="page-header header-filter" id="hello_world">
      <div class="page-header-image" style="background-image: url('https://images.unsplash.com/photo-1516979187457-637abb4f9353?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80');"></div>
      <div class="container">
          <div class="row">
              <div class="col-md-8 ml-auto mr-auto text-center">
                  <h1 class="title">Empruntez, Lisez, Prêtez</h1>
                  <h5 class="description">Trouvez votre prochaine lecture proche de chez vous en fonction de vos goûts</h5>
              </div>
              <div class="col-md-10 ml-auto mr-auto">
                  <div class="card card-raised card-form-horizontal card-plain" data-background-color="">
                      <div class="card-body">
                          <form method="" action="">
                              <div class="row">
                                  <div class="col-md-3">
                                      <div class="form-group">
                                          <input type="text" value="" placeholder="Full Name" class="form-control" autocomplete="family-name">
                                      </div>
                                  </div>
                                  <div class="col-md-3">
                                      <div class="form-group">
                                          <input type="email" placeholder="Your Email" class="form-control" autocomplete="email">
                                      </div>
                                  </div>
                                  <div class="col-md-3">
                                      <div class="form-group">
                                          <input type="password" placeholder="Password" class="form-control" autocomplete="current-password">
                                      </div>
                                  </div>
                                  <div class="col-md-3">
                                      <button type="button" class="btn btn-primary btn-round btn-block">Join Us</button>
                                  </div>
                              </div>
                          </form>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
    <!-- // SEARCH -->
    <center>
      <div class="col-md-5 ml-auto mr-auto">
        <div class="card card-login card-plain">
        <%= form_tag searchbar_index_path, method: :get do %>
          <div class="form-group">
            <%= text_field_tag :search1, params[:search1], placeholder: "Recherche", class:'form-control text-dark', id:'search_bar' %>
            <br><br>
            <%= text_field_tag :search2, params[:search2], placeholder: "Ville", class:'form-control text-dark', id:'search_bar' %>
            <%= button_tag "Rechercher", class: 'btn btn-primary btn-round' %>
          </div>
        <% end %>
        </div>
      </div>
    </center>
    <br><br>


    <%= form_tag new_home_path, method: :get do %>
      <%= button_tag "Donner", class: 'btn btn-primary btn-icon btn-round now-ui-icons shopping_credit-card' %>
    <% end %>


    <br><br>

    <br>
    <br>

    <% if current_user && @length_tab_book_copy>0 %>

    <div class="col-md-8 ml-auto mr-auto text-center">
      <h2 class="title">Autour de vous dans le <%= current_user.zip_code %>.. regardez  </h2>


      <ul class="nav nav-pills nav-pills-danger justify-content-center" role="tablist">
        <li class="nav-item">

            <%= link_to "All",  home_index_path(:category_selected => "All"), class: "nav-link", remote:true %>

        </li>
        <% if @dropD.length>4 %>
        <% 3.times { |i| %>
        <li class="nav-item">
          <%= link_to @dropD[i],  home_index_path(:category_selected => @dropD[i]), class: "nav-link", remote:true %>
        </li>
        <% } %>
        <div class="dropdown">
          <button class="btn btn-secondary btn-round dropdown-toggle nav-link" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Autre
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <% (@dropD.length-1-3).times { |i| %>
              <%= link_to @dropD[i+3],  home_index_path(:category_selected => @dropD[i+3]), class: "dropdown-item", remote:true %>
            <% } %>
          </div>
        </div>
      </ul>
    </div>
    <% end %>

    <div id="reco">

      <%= render 'home/recommendation', book_array: @book_copy_array %>

    </div>

    <% end %>

    <% if current_user && @length_tab_book_copy==0 %>

    <h1>No  livres found around you</h1>


    <% end %>
