<div class="container">
  <div class="card text-center">
      <div class="card-body">
        <h3 class="card-title">Modifier</h3>
        <center>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.label :password, "Nouveau mot de passe" %><br />

              <%= f.password_field :password, autofocus: true, autocomplete: "nouveau-mot de passe", class: "form-control gnark" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "Confirmer nouveau mot de passe" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "nouveau-mot de passe", class: "form-control gnark" %>
            </div>

            <div class="actions">
              <%= f.submit "Changer mot de passe", class:"btn btn-primary btn-round"%>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </center>





      </div>
  </div>


</div>
</div>
