
  <center>
    <div class="card text-center mt-5" data-background-color="black">
      <div class="card-header mt-2">
        <h1>Salut <%= @borrower.first_name %></h1>
      </div>

      <div class="card-body">
        <h4 class="card-title">
          C'est déjà la fin, tu vas devoir rendre ton livre à <%=@owner.first_name%> dans <%= @timeremaining %> jours !
        </h4>
        <p class="card-text">
         Enjoy le temps qu'il te reste
        </p>
        <%= link_to "Detail de l'emprunt", bookcopy_borrow_url(@borrow.book_copy_id,@borrow.id), class: "btn btn-primary btn-round btn-lg"%>

        <h3 class="card-text">
          Voici les informations concernant <%=@owner.first_name%>
        </h3>

        <div class="info info-horizontal">
          <div class="description">
            <h4 class="info-title">Contact</h4>
            <p> <b><%=@owner.first_name%>    <%=@owner.last_name%></b>
              <br>  Tel: <a href="<%=@owner.phone%>"><%=@owner.phone%></a>

              <br>  @: <a href="<%=@owner.email%>"><%=@owner.email%></a>

            </p>
          </div>
        </div>
      </div>
    </div>
  </center>
