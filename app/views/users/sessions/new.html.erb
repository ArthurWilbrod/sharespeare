<center>
  <div class="container">
    <br>
    <br>
    <h2>Se connecter</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <label for="exampleInputEmail1">Adresse email</label>

        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", id: 'sign_up_form' %>
      </div>

      <div class="field">
        <%= f.label :mot_de_passe %><br/>
        <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "current-password", id: 'sign_up_form' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :se_souvenir_de_moi %>
          <br>
          <br>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Go !", class:"btn btn-primary btn-round" %>
        <br>
        <br>
      </div>
    <% end %>

    <%= render "users/shared/links" %>

  </div>
</center>
