<div class="container">

  <div class="card text-center">
    <div class="card-body">
      <h3 class="card-title">Editer votre mot de passe</h3>
      <center>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-control gnark", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <br />
        <div class="field">
          <%= f.label :password , "Nouveau mot de passe"%>
          <br />

          <% if @minimum_password_length %>
            <small><%= @minimum_password_length %> carat√®res minimum</small>
          <% end %>
          <%= f.password_field :password,  class: "form-control gnark", autocomplete: "new-password" %>
        </div>
        <br />
        <div class="field">
          <%= f.label :password_confirmation , "Confirmer le mot de passe"%><br />
          <%= f.password_field :password_confirmation, class: "form-control gnark", autocomplete: "new-password" %>
        </div>
        <br />
        <div class="field">
          <%= f.label :current_password , "Mot de passe actuel" %>
          <%= f.password_field :current_password, class: "form-control gnark", autocomplete: "current-password" %>
        </div>
        <br />
        <div class="actions">
          <%= f.submit "Modifier", class:"btn btn-primary btn-round" %>
        </div>
      <% end %>
      <br />
      </center>


      <p>Vous voulez supprimer votre Compte ? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-primary btn-round" %></p>

      <%= link_to "Retour", :back %>

    <div class="card-footer text-muted mb-2">
      Lisez et Partagez vos Livres !
    </div>
  </div>

</div>
</div>
