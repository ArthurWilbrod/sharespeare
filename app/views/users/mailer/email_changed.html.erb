<div class="card text-center mt-5" style="width: 30rem;" data-background-color="black">
  <div class="card-header mt-2">
    <h1>Salut </h1>
  </div>
  
  <div class="card-body">
  <% if @resource.try(:unconfirmed_email?) %>
    <h4 class="card-title">
      Nous t'annonçons que tu vas remplacer ton ancien email par celui-ci <%= @resource.unconfirmed_email %>
    </h4>
    <% else %>
    <h4 class="card-title">
      Nous t'annonçons que tu as remplacé ton ancien email par celui-ci <%= @resource.email %>
    </h4>
  <% end %>
  </div>

  <div class="card-footer text-muted mb-2">
    Mail automatique
  </div>
  
</div>