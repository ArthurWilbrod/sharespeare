<h1>New book </h1>
<%= form_for( @new_book_copy, url: bookcopy_index_path, html: {method: "post"}) do |f| %>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= f.label 'ISDN' %><br>
    <%= f.number_field :isbn, class: "form-control"%>
  </div>
</div>

<%= f.submit "GO add ISDN" , class: "btn btn-primary"%>
<% end %>
